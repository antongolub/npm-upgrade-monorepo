{
  "name": "npm-upgrade-monorepo",
  "version": "0.0.0",
  "private": false,
  "description": "Blank TS repo",
  "source": "src/main/ts/index.ts",
  "main": "target/bundle/npm-upgrade-monorepo.js",
  "module": "target/bundle/npm-upgrade-monorepo.mjs",
  "unpkg": "target/bundle/npm-upgrade-monorepo.umd.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.json && tslint -c tslint.json src/test/js/*.js",
    "jest": "jest -w 1 --config=jest.config.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix && tslint -c tslint.json src/test/js/*.js --fix",
    "test": "yarn lint && yarn jest",
    "clean": "rimraf target typings flow-typed buildcache",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs && yarn uglify && yarn build:bundle",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "build:bundle": "microbundle --tsconfig tsconfig.es5.json build src/main/ts/index.ts -o target/bundle",
    "build:libdef": "dts-generator --project ./ --out typings/index.d.ts --prefix npm-upgrade-monorepo/target/es5 --name npm-upgrade-monorepo --main npm-upgrade-monorepo/target/es5/index --moduleResolution node && libdeffix --dts=./typings/index.d.ts --prefix=npm-upgrade-monorepo/target/es5 && flowgen typings/index.d.ts --output-file flow-typed/index.flow.js",
    "test:report": "yarn test && yarn push:report",
    "push:report": "yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "docs": "typedoc",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && npx yarn-audit-fix --audit-level=moderate && yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antongolub/npm-upgrade-monorepo.git"
  },
  "keywords": [
    "npm-upgrade-monorepo"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "devDependencies": {
    "@qiwi/libdefkit": "^2.1.6",
    "@qiwi/license": "^1.1.3",
    "@qiwi/semantic-release-gh-pages-plugin": "^5.0.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@swissquote/crafty-preset-jest": "^1.13.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.9",
    "terser": "^5.6.0",
    "ts-jest": "^26.5.1",
    "tslint": "6.1.3",
    "tslint-config-qiwi": "^1.6.2",
    "typedoc": "^0.20.24",
    "typescript": "4.1.5"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  }
}
